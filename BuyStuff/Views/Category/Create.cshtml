@model Category

<form method="post">
    <div class="border p-3 mt-4 border-2 border-black">
        <div class="row mb-2">
            <h2 class="text-primary">Create Category</h2>
        </div>
        <div asp-validation-summary="None"></div>
        <div class="mb-3 row p-1">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control shadow"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" ></label>
            <input asp-for="DisplayOrder" class=" form-control shadow" />
            <span asp-validation-for="DisplayOrder" class="text-danger" ></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control shadow" >Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control text-black shadow">
                    Back
                </a>
            </div>
        </div>

       

        
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
