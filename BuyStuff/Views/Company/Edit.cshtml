@* This page is not in use as we have combined create and update page into one page named UpSert *@

@model Product

<div class="card border-0 shadow border-black">
    <div class="card-header bg-secondary bg-gradient">
        <div class="row text-center">
            <h2 class="text-white">Update Product</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="form-floating mb-3 p-1">
                <input asp-for="Author" type="text" class="form-control border-0 shadow" />
                <label asp-for="Author"></label>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <div class="form-floating  mb-3 p-1">
                <input asp-for="Price" class="form-control  border-0 shadow" />
                <label asp-for="Price"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 p-1">
                <input asp-for="ISBN" class="form-control border-0 shadow" />
                <label asp-for="ISBN"></label>
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 p-1">

                <input asp-for="ListPrice" type="text" class="form-control border-0 shadow" />
                <label asp-for="ListPrice"></label>
                <span asp-validation-for="ListPrice" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 p-1">

                <input asp-for="Price50" class=" form-control border-0 shadow" />
                <label asp-for="Price50"></label>
                <span asp-validation-for="Price50" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 p-1">

                <input asp-for="Title" type="text" class="form-control border-0 shadow" />
                <label asp-for="Title"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 p-1">

                <input asp-for="Description" class=" form-control border-0 shadow" />
                <label asp-for="Description"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 p-1">

                <input asp-for="ImageUrl" class=" form-control border-0 shadow" />
                <label asp-for="ImageUrl"></label>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-floating mb-2 p-1">

                <select asp-for="@Model.Category" asp-items="ViewBag.CategoryList" class="form-select border-0 shadow ">
                    <option disabled selected>--Select Category--</option>
                </select>
                <label asp-for="@Model.Category"></label>
                <span asp-validation-for="@Model.Category" class="text-danger"></span>
            </div>
            

            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control text-black">
                        Back
                    </a>
                </div>
            </div>
        </form>
    </div>




</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
